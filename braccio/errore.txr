import serial

ser = serial.Serial('/dev/ttyTHS1', 115200, timeout=0.1)

# Send "move to 1500 Âµs" to servo ID 1
pos_val = int(1500 * 4)
t_val = int(20 / 20)
packet = bytearray([
    0x55, 0x55,
    1,
    7,
    1,
    pos_val & 0xFF,
    (pos_val >> 8) & 0xFF,
    t_val & 0xFF,
    (t_val >> 8) & 0xFF
])
ser.write(packet)
ser.flush()
